#!/usr/bin/env node
var debug = require('debug')('service');
var cluster = require('cluster');

var Logger  = require('../utils/logger');

// Time Zone
process.env.TZ = 'Asia/Seoul';

// Exception
// process.on('uncaughtException', function(error) {
// 	console.log(error);
// });

// Global Config
global.config = require('../config');

// Global Error Code
global.errorCode = require('../errorCode');

// set logger
global.log  = new Logger('../logs/debug.log');
global.loge = new Logger('../logs/exception.log');

log.file('test');

if( cluster.isMaster ) {
	var processCount = require('os').cpus().length - 2;

	cluster.on('exit',function(worker) {
		console.log( '['+worker.id+'] worker'  + " is exit");
	});
	
	for( var i = 0; i < processCount; i++ ) {
		var worker = cluster.fork();
	}

} else {
	var app = require('../app');
	var rabbitmq = require('../handlers/rabbitmq');

	

	rabbitmq.connect(function() {
		app.set('port', process.env.PORT || config.port);

		var server = app.listen(app.get('port'), function() {
			  debug('Express server listening on port ' + server.address().port);
		});
	});
}
